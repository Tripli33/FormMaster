@page
@model FormMaster.WEB.Pages.LoginModel
@{
    ViewData["Title"] = "Login page";
}

<form method="post" class="p-4 bg-light border rounded shadow-sm">
    <h3 class="mb-4">Login</h3>

    <div class="form-group mb-3">
        <label asp-for="LoginDto.Email" class="form-label fw-bold"></label>
        <input class="form-control" asp-for="LoginDto.Email" />
        <span class="text-danger validation-message" asp-validation-for="LoginDto.Email"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="LoginDto.Password" class="form-label fw-bold"></label>
        <input type="password" class="form-control" asp-for="LoginDto.Password" />
        <span class="text-danger validation-message" asp-validation-for="LoginDto.Password"></span>
    </div>

    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <button type="submit" class="btn btn-success w-100">Login</button>
</form>